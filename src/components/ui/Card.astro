---
import type { RepositoriesResponse } from 'interfaces/repositories.interface';
interface Props {
	data : RepositoriesResponse
	children?: HTMLElement | HTMLElement[];
}

const { data } = Astro.props;
const { description, full_name, html_url, id, language, license, name, url } = data;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={html_url} aria-label="link to project" target="_blank">
			<div class="relative flex items-end overflow-hidden rounded-xl">
			</div>
			<div class="mt-1 p-2">
				<h2 class="text-xl text-orange lg:text-2xl">{name}</h2>
				<!-- <Tags tags={tags} /> -->
			</div>
		</a>
	</article>
</section>
